<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_5sdp"
    android:orientation="vertical">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutMain">


        <androidx.cardview.widget.CardView
            android:id="@+id/imageCardView"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginVertical="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_3sdp"
            android:elevation="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/orderId">

            <ImageView
                android:id="@+id/product_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/product_pic" />
        </androidx.cardview.widget.CardView>



        <TextView
            android:id="@+id/orderId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/Heading_Color"
            android:textSize="@dimen/_9sdp"
            android:layout_marginStart="@dimen/_5sdp"
            app:layout_constraintBottom_toTopOf="@id/txt_itemCount"
            app:layout_constraintStart_toEndOf="@id/imageCardView"
            app:layout_constraintTop_toTopOf="@id/imageCardView"
            tools:text="Order ID  949499994"
            app:layout_constraintEnd_toStartOf="@id/OrderStatus"/>

        <TextView
            android:id="@+id/OrderStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/Heading_Color"
            android:gravity="end"
            android:textSize="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            app:layout_constraintBottom_toBottomOf="@id/orderId"
            app:layout_constraintStart_toEndOf="@id/orderId"
            app:layout_constraintTop_toTopOf="@id/orderId"
            tools:text="Status"
            app:layout_constraintEnd_toEndOf="parent"/>


<!--        <TextView-->
<!--            android:id="@+id/brand"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:fontFamily="@font/poppins_semibold"-->
<!--            android:textColor="@color/light_Heading_Color"-->
<!--            android:textSize="@dimen/_9sdp"-->
<!--            app:layout_constraintBottom_toTopOf="@id/tv_discription"-->
<!--            app:layout_constraintStart_toStartOf="@id/tv_product_name"-->
<!--            app:layout_constraintTop_toBottomOf="@id/tv_product_name"-->
<!--            tools:text="MAC"-->
<!--            app:layout_constraintEnd_toStartOf="@id/guideline"/>-->

        <TextView
            android:id="@+id/txt_itemCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/light_Heading_Color"
            android:textSize="@dimen/_8sdp"
            tools:text="4 Items "
            android:layout_marginTop="@dimen/_2sdp"
            app:layout_constraintBottom_toTopOf="@id/txtItemPrice"
            app:layout_constraintStart_toStartOf="@id/orderId"
            app:layout_constraintTop_toBottomOf="@id/orderId"
            app:layout_constraintEnd_toEndOf="@id/OrderStatus"/>

        <TextView
            android:id="@+id/txtItemPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/light_Heading_Color"
            android:textSize="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_2sdp"
            tools:text="Total Price : 200"
            app:layout_constraintBottom_toTopOf="@id/txtDeliveryDate"
            app:layout_constraintStart_toStartOf="@id/orderId"
            app:layout_constraintTop_toBottomOf="@id/txt_itemCount"
            app:layout_constraintEnd_toEndOf="@id/OrderStatus"/>

        <TextView
            android:id="@+id/txtDeliveryDate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_2sdp"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/light_Heading_Color"
            android:textSize="@dimen/_8sdp"
            app:layout_constraintBottom_toBottomOf="@id/imageCardView"
            app:layout_constraintEnd_toStartOf="@id/date"
            app:layout_constraintStart_toStartOf="@id/orderId"
            app:layout_constraintTop_toBottomOf="@id/txtItemPrice"
            tools:text="Delivered Date :"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_5sdp"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/light_Heading_Color"
            android:textSize="@dimen/_8sdp"
            app:layout_constraintBottom_toBottomOf="@id/txtDeliveryDate"
            app:layout_constraintStart_toEndOf="@id/txtDeliveryDate"
            app:layout_constraintTop_toTopOf="@id/txtDeliveryDate"
            tools:text="3 Aug 2022"
            app:layout_constraintEnd_toEndOf="@id/OrderStatus"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/light_grey"/>


</LinearLayout>