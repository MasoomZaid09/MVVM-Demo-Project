                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/llThanksForDeleviry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/choose_delivery_address"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/thanks_for_delivery_this_order"
                        android:textColor="@color/HomeThemeColor"
                        android:textSize="@dimen/_12sdp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.3"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_light"
                                android:text="@string/pic_time"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10sdp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".7">

                            <LinearLayout
                                android:id="@+id/llPickDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/drawable_box">

                                <TextView
                                    android:id="@+id/tvPickDate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@null"
                                    android:hint="@string/dd_mm_yyyy"
                                    android:maxLength="15"
                                    android:padding="@dimen/_3sdp"
                                    android:text=""
                                    android:textColor="@color/light_color"
                                    android:textSize="@dimen/_10sdp"
                                    app:drawableEndCompat="@drawable/ic_baseline_calendar_month_24" />
                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvCouriorDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/error_color"
                        android:textSize="@dimen/_10sdp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.3"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_light"
                                android:text="@string/expected_delivery_date"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10sdp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".7">

                            <LinearLayout
                                android:id="@+id/llDeleviryDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/drawable_box">

                                <TextView
                                    android:id="@+id/tvDeleviryDate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@null"
                                    android:hint="@string/dd_mm_yyyy"
                                    android:maxLength="15"
                                    android:padding="@dimen/_3sdp"
                                    android:text=""
                                    android:textColor="@color/light_color"
                                    android:textSize="@dimen/_10sdp"
                                    app:drawableEndCompat="@drawable/ic_baseline_calendar_month_24" />
                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/tvExpectedDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/error_color"
                    android:textSize="@dimen/_10sdp"
                    android:visibility="gone" />

                <LinearLayout

                    android:id="@+id/briefTheResion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/choose_delivery_address"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/breif_the_reason_for_rejection"
                        android:textColor="@color/HomeThemeColor"
                        android:textSize="@dimen/_12sdp" />

                    <EditText
                        android:id="@+id/etBriefTheResion"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:background="@null"
                        android:backgroundTint="@null"
                        android:fontFamily="@font/poppins_regular"
                        android:hint="Enter the reason"
                        android:inputType="textMultiLine"
                        android:maxLength="100"
                        android:scrollbars="vertical"
                        android:singleLine="false"
                        android:textSize="@dimen/_10sdp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvBriefTheResion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/error_color"
                    android:textSize="@dimen/_10sdp"
                    android:visibility="gone" />

