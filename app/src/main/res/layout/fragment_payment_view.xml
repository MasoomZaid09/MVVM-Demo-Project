                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Date &amp; Time :"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/Heading_Color"
                    app:layout_constraintTop_toTopOf="@id/txtOrderTitle"
                    app:layout_constraintStart_toEndOf="@id/txtOrderTitle"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/txtOrderDateAndTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="20/01/2022 12:03"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="@dimen/_11sdp"
                    app:layout_constraintTop_toTopOf="@id/txtOrderId"
                    app:layout_constraintEnd_toEndOf="@id/txtDateTitle"
                    app:layout_constraintStart_toStartOf="@id/txtDateTitle"/>


                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/grey_font"
                    android:layout_marginTop="@dimen/_5sdp"
                    app:layout_constraintTop_toBottomOf="@id/txtOrderId"/>

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/grey_font"
                    android:layout_marginTop="@dimen/_2sdp"
                    app:layout_constraintTop_toBottomOf="@id/view1"/>


                <TextView
                    android:id="@+id/txtTransactionId"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
