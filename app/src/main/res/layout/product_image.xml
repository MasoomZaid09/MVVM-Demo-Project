<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="@dimen/_15sdp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="7dp">

    <LinearLayout
        android:id="@+id/CategoryCV"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="2dp"
        android:paddingVertical="2dp">


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/item_image"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_130sdp"
                android:scaleType="fitXY" />

            <RelativeLayout
                android:layout_width="@dimen/_26sdp"
                android:layout_height="@dimen/_27sdp"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/_9sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!--                <LinearLayout-->
                    <!--                    android:id="@+id/heartOutline"-->
                    <!--                    android:layout_width="match_parent"-->
                    <!--                    android:layout_height="match_parent"-->
                    <!--                    android:layout_centerInParent="true"-->
                    <!--                    android:gravity="center">-->

                    <!--                    <RelativeLayout-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="wrap_content">-->

                    <!--                        <ImageView-->
                    <!--                            android:id="@+id/heart"-->
                    <!--                            android:layout_width="match_parent"-->
                    <!--                            android:layout_height="match_parent"-->
                    <!--                            android:background="@drawable/blackheart"-->
                    <!--                            android:visibility="visible" />-->

                    <!--                        <ImageView-->
                    <!--                            android:id="@+id/heartfill"-->
                    <!--                            android:layout_width="match_parent"-->
                    <!--                            android:layout_height="match_parent"-->
                    <!--                            android:background="@drawable/fill_heartnew"-->
                    <!--                            android:visibility="gone" />-->
                    <!--                    </RelativeLayout>-->

                    <!--                    -->
                    <!--                </LinearLayout>-->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/heartOutline"
                        android:layout_width="@dimen/_26sdp"
                        android:layout_height="@dimen/_27sdp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="MissingConstraints">

                            <ImageView
                                android:id="@+id/LikeHeart"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/red_heart"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.0"
                                android:visibility="gone"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.0" />

                            <ImageView
                                android:id="@+id/unLikeHeart"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/new_green_heart"
                                android:visibility="visible"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.0" />


                        </RelativeLayout>

                        <ImageView
                            android:id="@+id/heartfill"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:id="@+id/itemTitle1"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:layout_gravity="center"
                tools:text="asdadasdasdasadasdasd"
                android:textAlignment="center"
                android:paddingHorizontal="@dimen/_7sdp"
                android:textColor="@color/black"
                android:singleLine="true"
                android:textSize="@dimen/_10sdp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/itemValue2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:textColor="@color/HomeThemeColor"
                    android:textSize="@dimen/_9sdp" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>