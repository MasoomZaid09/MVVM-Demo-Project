<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.acitivity.OTPVerificationActivity">


    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cardcorner"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_140sdp"
            android:layout_gravity="center"
            android:background="@color/HomeThemeColor"
            android:scaleType="centerCrop"
            android:src="@drawable/half_splash" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="-40dp"
            app:cardCornerRadius="@dimen/_20sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/header_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:fontFamily="@font/public_sans_semi_bold"
                        android:text="@string/otp_verification"
                        android:textColor="@color/Heading_Color"
                        android:textSize="@dimen/_16sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/subHeader_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:fontFamily="@font/public_sans_regular"
                        android:text="@string/please_enter_the_4_digits_otp_sent_on_your_registered_email_address"
                        android:textColor="@color/Heading_Color"
                        android:textSize="@dimen/_10sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/header_title" />

                    <ImageView
                        android:id="@+id/imgOtp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_180sdp"
                        android:layout_marginHorizontal="@dimen/_80sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:src="@drawable/otp"
                        app:layout_constraintTop_toBottomOf="@id/subHeader_title" />





                    <TextView
                       android:id="@+id/txtMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/enter_4_digits_code"
                        android:textColor="@color/Heading_Color"
                        android:textSize="@dimen/_15sdp"
                        android:fontFamily="@font/public_sans_semi_bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/imgOtp"/>




                    <EditText
                        android:id="@+id/etOtp1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_15sdp"
                        android:hint="*"
                        android:digits="0123456789"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:paddingHorizontal="@dimen/_5sdp"
                        android:background="@null"
                        android:textColor="@color/HomeThemeColor"
                        android:inputType="phone"
                        android:maxLength="1"
                        app:layout_constraintStart_toStartOf="@id/txtMessage"
                        app:layout_constraintTop_toBottomOf="@id/txtMessage"/>

                    <View
                        android:id="@+id/view1"
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:background="@color/HomeThemeColor"
                        app:layout_constraintStart_toStartOf="@id/etOtp1"
                        app:layout_constraintEnd_toEndOf="@id/etOtp1"
                        app:layout_constraintTop_toBottomOf="@id/etOtp1"/>


                    <EditText
                        android:id="@+id/etOtp2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_15sdp"
                        android:hint="*"
                        android:digits="0123456789"
                        android:paddingHorizontal="@dimen/_5sdp"
                        android:background="@null"
                        android:textColor="@color/HomeThemeColor"
                        android:inputType="phone"
                        android:maxLength="1"
                        app:layout_constraintStart_toEndOf="@id/etOtp1"
                        app:layout_constraintEnd_toStartOf="@id/etOtp3"
                        app:layout_constraintTop_toTopOf="@id/etOtp1"
                        app:layout_constraintBottom_toBottomOf="@id/etOtp1"/>

                    <View
                        android:id="@+id/view2"
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:background="@color/HomeThemeColor"
                        app:layout_constraintStart_toStartOf="@id/etOtp2"
                        app:layout_constraintEnd_toEndOf="@id/etOtp2"
                        app:layout_constraintTop_toTopOf="@id/view1"
                        app:layout_constraintBottom_toBottomOf="@id/view1"/>



                    <EditText
                        android:id="@+id/etOtp3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_15sdp"
                        android:hint="*"
                        android:digits="0123456789"
                        android:paddingHorizontal="@dimen/_5sdp"
                        android:background="@null"
                        android:textColor="@color/HomeThemeColor"
                        android:inputType="phone"
                        android:maxLength="1"
                        app:layout_constraintStart_toEndOf="@id/etOtp2"
                        app:layout_constraintEnd_toStartOf="@id/etOtp4"
                        app:layout_constraintBottom_toBottomOf="@id/etOtp1"
                        app:layout_constraintTop_toTopOf="@id/etOtp1"/>

                    <View
                        android:id="@+id/view3"
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:background="@color/HomeThemeColor"
                        app:layout_constraintStart_toStartOf="@id/etOtp3"
                        app:layout_constraintEnd_toEndOf="@id/etOtp3"
                        app:layout_constraintTop_toTopOf="@id/view1"
                        app:layout_constraintBottom_toBottomOf="@id/view1"/>


                    <EditText
                        android:id="@+id/etOtp4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_15sdp"
                        android:hint="*"
                        android:digits="0123456789"
                        android:paddingHorizontal="@dimen/_5sdp"
                        android:background="@null"
                        android:textColor="@color/HomeThemeColor"
                        android:inputType="phone"
                        android:maxLength="1"
                        android:layout_marginEnd="@dimen/_15sdp"
                        app:layout_constraintTop_toTopOf="@id/etOtp1"
                        app:layout_constraintEnd_toEndOf="@id/txtMessage"
                        app:layout_constraintBottom_toBottomOf="@id/etOtp1"/>

                    <View
                        android:id="@+id/view4"
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:background="@color/HomeThemeColor"
                        app:layout_constraintStart_toStartOf="@id/etOtp4"
                        app:layout_constraintEnd_toEndOf="@id/etOtp4"
                        app:layout_constraintTop_toTopOf="@id/view1"
                        app:layout_constraintBottom_toBottomOf="@id/view1"/>

                    <TextView
                        android:id="@+id/tvOtp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/error_color"
                        android:textSize="@dimen/_10sdp"
                        android:text=""
                        android:visibility="gone"
                        android:fontFamily="@font/public_sans_regular"
                        app:layout_constraintStart_toStartOf="@id/view1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/view1"/>


                    <TextView
                        android:id="@+id/txtTimer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:fontFamily="@font/public_sans_regular"
                        android:text="@string/_0_59"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textColor="@color/HomeThemeColor"
                        android:textSize="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_15sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/view1"
                        app:layout_constraintBottom_toTopOf="@id/btnSubmit"/>

                    <TextView
                        android:id="@+id/txtResendCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:fontFamily="@font/public_sans_regular"
                        android:text="Sending..."
                        android:textColor="@color/HomeThemeColor"
                        android:textSize="@dimen/_10sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/txtTimer" />

                    <Button
                        android:id="@+id/btnSubmit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_25sdp"
                        android:layout_marginBottom="@dimen/_60sdp"
                        android:background="@drawable/login_background"
                        android:paddingHorizontal="@dimen/_55sdp"
                        android:paddingVertical="@dimen/_3sdp"
                        android:text="@string/submit"
                        android:textAllCaps="false"
                        android:textSize="@dimen/_13sdp"
                        app:layout_constraintBottom_toBottomOf="@id/guideline"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.95"/>


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.core.widget.NestedScrollView>


        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"
        android:theme="@style/progressBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>