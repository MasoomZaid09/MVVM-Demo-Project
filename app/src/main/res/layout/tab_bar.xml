<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_weight="5"
    android:id="@+id/CustomerTabLayout"
    android:visibility="visible"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/home_grey"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/home_grey_ImageView"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:src="@drawable/home_grey_image"
                />

            <ImageView
                android:id="@+id/home_green_imageview"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:src="@drawable/green_home_image"
                />



        </RelativeLayout>


        <TextView
            android:id="@+id/Home_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_light"
            android:gravity="center"
            android:text="@string/home"
            android:textColor="@color/HomeThemeColor"
            android:textSize="@dimen/_8sdp"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/category_ll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/category_greyImageView"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:src="@drawable/category_image" />

            <ImageView
                android:id="@+id/category_greenImageView"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:src="@drawable/category_green_image"
                android:visibility="gone" />

        </RelativeLayout>


        <TextView
            android:id="@+id/Category_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_light"
            android:gravity="center"
            android:text="@string/Category"
            android:textColor="@color/gray_color"
            android:textSize="@dimen/_8sdp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/store_ll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/store_greyImageView"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:src="@drawable/store_grey_image" />

            <ImageView
                android:id="@+id/store_greenImageView"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:src="@drawable/store_green_image"
                android:visibility="gone" />

        </RelativeLayout>


        <TextView
            android:id="@+id/Store_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_light"
            android:gravity="center"
            android:text="@string/Store"
            android:textColor="@color/gray_color"
            android:textSize="@dimen/_8sdp"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/orders_ll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/order_greyImageView"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:src="@drawable/grey_cart" />

            <ImageView
                android:id="@+id/order_greenImageView"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_green_cart"
                android:visibility="gone" />

        </RelativeLayout>


        <TextView
            android:id="@+id/Order_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_light"
            android:gravity="center"
            android:text="@string/Orders"
            android:textColor="@color/gray_color"
            android:textSize="@dimen/_8sdp"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/account_ll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/account_greyImageView"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:src="@drawable/account_grey_image" />

            <ImageView
                android:id="@+id/account_greenImageView"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:src="@drawable/account_green_image"
                android:visibility="gone" />

        </RelativeLayout>


        <TextView
            android:id="@+id/account_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_light"
            android:gravity="center"
            android:text="@string/Account"
            android:textColor="@color/gray_color"
            android:textSize="@dimen/_8sdp"
            android:textStyle="bold" />
    </LinearLayout>




</LinearLayout>
