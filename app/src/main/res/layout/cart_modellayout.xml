<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_cardModellayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_8sdp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="@dimen/_7sdp">


        <LinearLayout
            android:id="@+id/ll_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/choose_delivery_address"
            android:orientation="horizontal"
            android:padding="@dimen/_3sdp"
            android:weightSum="2">

            <RelativeLayout
                android:id="@+id/imageLayout"
                android:layout_width="0dp"
                android:layout_height="@dimen/_90sdp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.62">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="@dimen/_5sdp"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/_6sdp"
                    app:cardCornerRadius="@dimen/_5sdp">

                    <ImageView
                        android:id="@+id/product_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/product_pic" />

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardBackgroundColor="#97BF1E2E"
                    android:elevation="@dimen/_5sdp"
                    >
                    <TextView
                        android:id="@+id/tv_priceOff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/_2sdp"
                        android:paddingHorizontal="@dimen/_2sdp"
                        android:textColor="@color/white"
                        android:visibility="gone"
                        android:textSize="@dimen/_10sdp"
                        android:text="@string/_15_off"/>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_5sdp"
                android:layout_weight="1.4"
                android:layout_marginEnd="@dimen/_3sdp"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/tv_product_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".9"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="start"
                        android:text="@string/mac"
                        android:textColor="@color/light_Heading_Color"
                        android:textSize="@dimen/_11sdp" />

                    <ImageView
                        android:id="@+id/img_cancle"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_gravity="end"
                        android:layout_weight=".1"
                        android:src="@drawable/delete_address" />


                </LinearLayout>


                <TextView
                    android:id="@+id/tv_discription"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:text="@string/aka_miracle_alien_cookies_miracle"
                    android:textColor="@color/light_Heading_Color"
                    android:textSize="@dimen/_10sdp" />


                <TextView
                    android:id="@+id/tv_qty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:text="10 g"
                    android:textColor="@color/light_Heading_Color"
                    android:textSize="@dimen/_10sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:paddingVertical="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:id="@+id/tv_newPrice"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="00000.00"
                        android:textColor="@color/light_Heading_Color"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/tv_oldPrice"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="00000.00"
                        android:textColor="@color/light_Heading_Color"
                        android:textSize="@dimen/_10sdp" />



                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:gravity="end"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            android:id="@+id/IncAndDecLL"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:visibility="visible">

                            <RelativeLayout
                                android:id="@+id/decrement"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_17sdp"
                                android:layout_gravity="start"
                                android:layout_weight="1"
                                android:background="@drawable/increment_button">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:text="-"
                                    android:textColor="@color/HomeThemeColor"
                                    android:textSize="@dimen/_11sdp"
                                    android:textStyle="bold" />

                            </RelativeLayout>

                            <TextView
                                android:id="@+id/tv_quantity"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/light_Heading_Color"
                                android:textSize="@dimen/_12sdp" />

                            <RelativeLayout
                                android:id="@+id/increment"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_17sdp"
                                android:layout_gravity="start"
                                android:layout_weight="1"
                                android:background="@drawable/increment_button">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:text="+"
                                    android:textColor="@color/HomeThemeColor"
                                    android:textSize="@dimen/_11sdp"
                                    android:textStyle="bold" />

                            </RelativeLayout>
                        </LinearLayout>

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/loader"
                            style="@style/Theme.KanabixApp.DefaultLottieLoader"
                            android:layout_gravity="center"
                            android:visibility="gone" />


                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>