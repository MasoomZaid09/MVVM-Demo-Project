                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/Heading_Color"
                    app:layout_constraintTop_toTopOf="@id/txtTransactionId"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/txtTransactionId"/>

                <TextView
                    android:id="@+id/txtTransactionDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="20/01/2022 12:03"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="@dimen/_11sdp"
                    app:layout_constraintStart_toStartOf="@id/txtTransactionTitle"
                    app:layout_constraintTop_toBottomOf="@id/txtTransactionTitle"
                    app:layout_constraintEnd_toEndOf="@id/txtTransactionTitle"/>


                <View
