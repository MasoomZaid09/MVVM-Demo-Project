<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:shimmer="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragment.Tabs.CustomerHomePage">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/searchbackground">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_marginLeft="@dimen/_7sdp"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_baseline_search_24" />

                <EditText
                    android:id="@+id/DFsearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_toRightOf="@id/icon"
                    android:background="@null"
                    android:imeOptions="actionSearch"
                    android:hint="Search for category and products"
                    android:maxLength="30"
                    android:maxLines="1"
                    android:padding="@dimen/_6sdp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:orientation="vertical"
                android:visibility="visible"
                android:id="@+id/mainLayout"
                tools:ignore="MissingClass">


                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_marginVertical="@dimen/_3sdp"
                            android:justificationMode="inter_word"
                            android:textSize="@dimen/_11sdp"
                            android:textColor="@color/HomeThemeColor"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:fontFamily="@font/poppins_bold"
                            android:singleLine="true"
                            android:ellipsize="marquee"
                            android:marqueeRepeatLimit ="marquee_forever"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:scrollHorizontally="true" />

                        <!--                <LinearLayout-->
                        <!--                    android:id="@+id/ll_location"-->
                        <!--                    android:layout_width="wrap_content"-->
                        <!--                    android:layout_height="wrap_content"-->
                        <!--                    android:layout_marginTop="@dimen/_2sdp"-->
                        <!--                    android:layout_gravity="end"-->
                        <!--                    android:orientation="horizontal">-->

                        <!--                    <ImageView-->
                        <!--                        android:layout_width="@dimen/_12sdp"-->
                        <!--                        android:layout_height="@dimen/_12sdp"-->
                        <!--                        android:layout_marginRight="@dimen/_5sdp"-->
                        <!--                        android:src="@drawable/location" />-->

                        <!--                    <TextView-->
                        <!--                        android:layout_width="wrap_content"-->
                        <!--                        android:layout_height="wrap_content"-->
                        <!--                        android:layout_marginRight="@dimen/_10sdp"-->
                        <!--                        android:text="Location"-->
                        <!--                        android:textColor="@color/HomeThemeColor"-->
                        <!--                        android:textSize="@dimen/_12sdp" />-->
                        <!--                </LinearLayout>-->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:orientation="horizontal">


                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/categoryTitleLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone">

                                <TextView
                                    android:id="@+id/txtCategory"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:text="Categories"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_15sdp"
                                    android:textStyle="bold"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"/>

                                <LinearLayout
                                    android:id="@+id/SeeAllCategories_TextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="end"
                                    android:orientation="horizontal"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="@id/txtCategory"
                                    app:layout_constraintBottom_toBottomOf="@id/txtCategory">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentRight="true"
                                        android:layout_marginRight="@dimen/_5sdp"
                                        android:gravity="center"
                                        android:text="See all"
                                        android:textColor="@color/HomeThemeColor"
                                        android:textSize="@dimen/_9sdp" />

                                    <ImageView
                                        android:layout_width="@dimen/_15sdp"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/green_arrow" />

                                </LinearLayout>

                            </androidx.constraintlayout.widget.ConstraintLayout>





                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/CategoryRecycler"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:orientation="horizontal" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/bannerClick"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_140sdp"
                            app:cardCornerRadius="@dimen/_5sdp"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_14sdp">

                            <com.denzcoskun.imageslider.ImageSlider
                                android:id="@+id/image_slider"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:iss_auto_cycle="true"
                                app:iss_delay="0"
                                app:iss_error_image="@color/white"
                                app:iss_period="2000"
                                app:iss_placeholder="@color/white" />

                        </androidx.cardview.widget.CardView>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/dealTitleLayout"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_width="match_parent"
                            android:visibility="gone"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/txtKanabixDeals"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_10sdp"
                                android:fontFamily="@font/poppins_semibold"
                                android:text="@string/kanabix_deals"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_16sdp"
                                android:textStyle="bold"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:orientation="horizontal"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="@id/txtKanabixDeals"
                                app:layout_constraintBottom_toBottomOf="@id/txtKanabixDeals">

                                <!--                    <TextView-->
                                <!--                        android:layout_width="wrap_content"-->
                                <!--                        android:layout_height="wrap_content"-->
                                <!--                        android:fontFamily="@font/poppins_light"-->
                                <!--                        android:text="@string/offer_ends_in_20h_51m_6s"-->
                                <!--                        android:textColor="@color/black"-->
                                <!--                        android:textSize="@dimen/_8sdp"-->
                                <!--                        android:textStyle="bold" />-->


                                <LinearLayout
                                    android:id="@+id/view_alloffers"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="right"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentRight="true"
                                        android:layout_marginRight="@dimen/_5sdp"
                                        android:gravity="center"
                                        android:text="@string/view_all_offers"
                                        android:textColor="@color/HomeThemeColor"
                                        android:textSize="@dimen/_9sdp" />

                                    <ImageView
                                        android:layout_width="@dimen/_15sdp"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:src="@drawable/green_arrow" />

                                </LinearLayout>

                            </LinearLayout>

                        </androidx.constraintlayout.widget.ConstraintLayout>



                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/DealsRecycler"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:visibility="gone"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:orientation="horizontal"
                            />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:orientation="horizontal">


                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/productTitleLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone">

                                <TextView
                                    android:id="@+id/txtProduct"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:text="@string/products_for_you"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_15sdp"
                                    android:textStyle="bold"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"/>


                                <LinearLayout
                                    android:id="@+id/viewAllProducts"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="end"
                                    android:orientation="horizontal"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="@id/txtProduct"
                                    app:layout_constraintBottom_toBottomOf="@id/txtProduct">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="end"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_alignParentRight="true"
                                            android:layout_marginRight="@dimen/_5sdp"
                                            android:gravity="center"
                                            android:text="See all"
                                            android:textColor="@color/HomeThemeColor"
                                            android:textSize="@dimen/_9sdp" />

                                        <ImageView
                                            android:layout_width="@dimen/_15sdp"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center"
                                            android:src="@drawable/green_arrow" />

                                    </LinearLayout>

                                </LinearLayout>

                            </androidx.constraintlayout.widget.ConstraintLayout>



                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/ProductsRecyclerview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:visibility="gone"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:orientation="vertical" />


                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>

            </LinearLayout>

            <TextView
                android:id="@+id/txtNoData"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="No Data Found"
                android:visibility="gone"
                android:textSize="@dimen/_13sdp"
                android:gravity="center"
                android:textColor="@color/Heading_Color"
                android:fontFamily="@font/poppins_light" />

        </androidx.appcompat.widget.LinearLayoutCompat>



    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>

