<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragment.account.Changepassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgPassword"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="bottom"
                android:src="@drawable/password" />

            <View
                android:id="@+id/viewHorizontal2"
                android:layout_width="2dp"
                android:layout_height="@dimen/_22sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:background="@color/HomeThemeColor"
                app:layout_constraintStart_toEndOf="@id/imgPassword"
                app:layout_constraintTop_toBottomOf="@id/midGuideline" />

            <EditText
                android:id="@+id/etOldPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="Old password"
                android:inputType="textPassword"
                android:maxLength="30"
                android:maxLines="1"
                android:textColor="@color/Heading_Color"
                android:textSize="@dimen/_11sdp" />

            <ImageView
                android:id="@+id/imgEye"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="bottom"
                android:layout_marginRight="@dimen/_10sdp"
                android:src="@drawable/ic__cross_eye" />
        </LinearLayout>

        <View
            android:id="@+id/viewOldPassword"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/HomeThemeColor" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvOldPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/error_color"
        android:textSize="@dimen/_10sdp"
        android:text=""
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:visibility="gone"
        android:fontFamily="@font/public_sans_regular"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="bottom"
                android:src="@drawable/password" />

            <View
                android:layout_width="2dp"
                android:layout_height="@dimen/_22sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:background="@color/HomeThemeColor"
                app:layout_constraintStart_toEndOf="@id/imgPassword"
                app:layout_constraintTop_toBottomOf="@id/midGuideline" />

            <EditText
                android:id="@+id/etNewPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="New password"
                android:inputType="textPassword"
                android:maxLength="30"
                android:maxLines="1"
                android:textColor="@color/Heading_Color"
                android:textSize="@dimen/_11sdp" />

            <ImageView
                android:id="@+id/neweye"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="bottom"
                android:layout_marginRight="@dimen/_10sdp"
                android:src="@drawable/ic__cross_eye" />
        </LinearLayout>

        <View
            android:id="@+id/viewNewPassword"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/HomeThemeColor" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvNewPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/error_color"
        android:textSize="@dimen/_10sdp"
        android:text=""
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:visibility="gone"
        android:fontFamily="@font/public_sans_regular"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="bottom"
                android:src="@drawable/password" />

            <View
                android:layout_width="2dp"
                android:layout_height="@dimen/_22sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:background="@color/HomeThemeColor"
                app:layout_constraintStart_toEndOf="@id/imgPassword"
                app:layout_constraintTop_toBottomOf="@id/midGuideline" />

            <EditText
                android:id="@+id/confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:maxLength="30"
                android:maxLines="1"
                android:textColor="@color/Heading_Color"
                android:textSize="@dimen/_11sdp" />

            <ImageView

                android:id="@+id/confirmeye"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="bottom"
                android:layout_marginRight="@dimen/_10sdp"
                android:src="@drawable/ic__cross_eye" />
        </LinearLayout>

        <View
            android:id="@+id/viewConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/HomeThemeColor" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvConfirmPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/error_color"
        android:textSize="@dimen/_10sdp"
        android:text=""
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:visibility="gone"
        android:fontFamily="@font/public_sans_regular"/>

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="150dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/login_button"
        android:fontFamily="@font/poppins_medium"
        android:paddingLeft="@dimen/_50sdp"
        android:paddingRight="@dimen/_50sdp"
        android:text="Save"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="@dimen/_13sdp" />

</LinearLayout>