<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.acitivity.ForgetPasswordActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cardcorner"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_140sdp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:background="@color/HomeThemeColor"
            android:src="@drawable/half_splash" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="@dimen/_20sdp"
            android:layout_marginBottom="-40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">




                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/header_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Forgot Password"
                        android:textSize="@dimen/_16sdp"
                        android:textColor="@color/Heading_Color"
                        android:fontFamily="@font/public_sans_semi_bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginHorizontal="@dimen/_15sdp"/>

                    <TextView
                        android:id="@+id/subHeader_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/please_enter_the_phone_number_you_d_like_your_password_reset_information_sent_to"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/Heading_Color"
                        android:fontFamily="@font/public_sans_regular"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/header_title"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_5sdp"/>

                    <ImageView
                        android:id="@+id/imgForgetPassword"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_180sdp"
                        android:src="@drawable/forget_password"
                        android:layout_marginHorizontal="@dimen/_25sdp"
                        app:layout_constraintTop_toBottomOf="@id/subHeader_title"
                        android:layout_marginTop="@dimen/_20sdp"/>

                    <LinearLayout
                        android:id="@+id/phoneLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible"
                        android:layout_marginTop="@dimen/_35sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/imgForgetPassword">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/imgPhone"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:src="@drawable/phone_logo"
                                android:visibility="visible"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="@id/viewHorizontal1"
                                app:layout_constraintBottom_toBottomOf="@id/viewHorizontal1"
                                android:layout_marginStart="@dimen/_15sdp"/>

                            <View
                                android:id="@+id/viewHorizontal1"
                                android:layout_width="2dp"
                                android:layout_height="@dimen/_22sdp"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:background="@color/HomeThemeColor"
                                app:layout_constraintStart_toEndOf="@id/imgPhone"
                                app:layout_constraintTop_toTopOf="parent" />

                            <EditText
                                android:id="@+id/etPhone"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:hint="@string/enter_your_phone_number"
                                android:inputType="phone"
                                android:maxLength="10"
                                android:maxLines="1"
                                android:digits="0123456789"
                                android:paddingVertical="@dimen/_5sdp"
                                android:visibility="visible"
                                android:textSize="@dimen/_11sdp"
                                app:layout_constraintStart_toEndOf="@id/viewHorizontal1"
                                app:layout_constraintTop_toTopOf="@id/viewHorizontal1"
                                app:layout_constraintBottom_toBottomOf="@id/viewHorizontal1"
                                android:textColor="@color/Heading_Color"
                                android:background="@null"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginHorizontal="@dimen/_15sdp"/>

                            <View
                                android:id="@+id/viewPhoneNumber"
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_marginHorizontal="@dimen/_15sdp"
                                android:background="@color/HomeThemeColor"
                                app:layout_constraintTop_toBottomOf="@id/viewHorizontal1"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginTop="@dimen/_5sdp"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/emailLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/_35sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/imgForgetPassword">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/imgEmail"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:src="@drawable/email"
                                android:visibility="visible"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="@id/viewHorizontal2"
                                app:layout_constraintBottom_toBottomOf="@id/viewHorizontal2"
                                android:layout_marginStart="@dimen/_15sdp"/>

                            <View
                                android:id="@+id/viewHorizontal2"
                                android:layout_width="2dp"
                                android:layout_height="@dimen/_22sdp"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:background="@color/HomeThemeColor"
                                app:layout_constraintStart_toEndOf="@id/imgEmail"
                                app:layout_constraintTop_toTopOf="parent" />

                            <EditText
                                android:id="@+id/etEmail"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:hint="@string/hint_email"
                                android:inputType="textEmailAddress"
                                android:maxLines="1"
                                android:textSize="@dimen/_11sdp"
                                android:visibility="visible"
                                app:layout_constraintStart_toEndOf="@id/viewHorizontal2"
                                app:layout_constraintTop_toTopOf="@id/viewHorizontal2"
                                app:layout_constraintBottom_toBottomOf="@id/viewHorizontal2"
                                android:textColor="@color/Heading_Color"
                                android:background="@null"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginHorizontal="@dimen/_15sdp"/>

                            <View
                                android:id="@+id/viewEmail"
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_marginHorizontal="@dimen/_15sdp"
                                android:background="@color/HomeThemeColor"
                                app:layout_constraintTop_toBottomOf="@id/viewHorizontal2"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginTop="@dimen/_5sdp"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvPhoneNumber"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/error_color"
                        android:textSize="@dimen/_11sdp"
                        android:text=""
                        android:layout_marginHorizontal="@dimen/_15sdp"
                        android:visibility="gone"
                        android:fontFamily="@font/public_sans_regular"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/phoneLayout"/>

                    <TextView
                        android:id="@+id/tvEmail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/error_color"
                        android:textSize="@dimen/_11sdp"
                        android:text=""
                        android:layout_marginHorizontal="@dimen/_15sdp"
                        android:visibility="gone"
                        android:fontFamily="@font/public_sans_regular"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/emailLayout"/>

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/midGuideline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.69"/>

                    <Button
                        android:id="@+id/btnSend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/login_background"
                        android:text="@string/send"
                        android:textSize="@dimen/_13sdp"
                        android:textAllCaps="false"
                        android:paddingHorizontal="@dimen/_55sdp"
                        android:paddingVertical="@dimen/_3sdp"
                        android:layout_marginVertical="@dimen/_30sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/midGuideline"/>

                    <TextView
                        android:id="@+id/txtBackToLogin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/back_to_login"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="@color/HomeThemeColor"
                        android:fontFamily="@font/public_sans_regular"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/btnSend"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        app:layout_constraintBottom_toBottomOf="@id/guideline"/>

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.95"/>


                </androidx.constraintlayout.widget.ConstraintLayout>




        </androidx.cardview.widget.CardView>

    </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"
        android:theme="@style/progressBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>