<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.deals.DealsFragment">

    <RelativeLayout
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/searchbackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="@dimen/_10sdp">

        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginLeft="@dimen/_7sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:src="@drawable/ic_baseline_search_24" />

        <EditText
            android:id="@+id/DFsearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@null"
            android:hint="@string/search"
            android:maxLength="40"
            android:maxLines="1"
            android:padding="@dimen/_6sdp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/HomeThemeColor"
            android:textSize="15dp" />


    </RelativeLayout>

    <TextView
        android:id="@+id/txtTitleHuray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/background_hurry"
        android:fontFamily="@font/poppins_medium"
        android:paddingHorizontal="@dimen/_20sdp"
        android:paddingTop="@dimen/_7sdp"
        android:paddingBottom="@dimen/_7sdp"
        android:text="HURRY!"
        android:textColor="@color/white"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_deals"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_4sdp"
        android:overScrollMode="never"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtTitleHuray"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_3sdp"
        android:layout_marginHorizontal="@dimen/_8sdp"/>

    <TextView
        android:id="@+id/txtNoData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_light"
        android:text="No Data Found"
        android:textColor="@color/Heading_Color"
        android:textSize="@dimen/_13sdp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>