<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.acitivity.ResetPassword">

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cardcorner"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_140sdp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:background="@color/HomeThemeColor"
            android:src="@drawable/half_splash" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="@dimen/_20sdp"
            android:layout_marginBottom="-40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/header_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Reset Password"
                        android:textSize="@dimen/_16sdp"
                        android:textColor="@color/Heading_Color"
                        android:fontFamily="@font/public_sans_semi_bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginHorizontal="@dimen/_15sdp"/>


                    <ImageView
                        android:id="@+id/imgResetPassword"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_140sdp"
                        android:src="@drawable/reset_password"
                        android:layout_marginHorizontal="@dimen/_55sdp"
                        app:layout_constraintTop_toBottomOf="@id/header_title"
                        android:layout_marginTop="@dimen/_20sdp"/>



                    // password

                    <ImageView
                        android:id="@+id/imgPassword"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/password"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/viewHorizontal2"
                        app:layout_constraintBottom_toBottomOf="@id/viewHorizontal2"
                        android:layout_marginStart="@dimen/_15sdp"/>

                    <View
                        android:id="@+id/viewHorizontal2"
                        android:layout_width="2dp"
                        android:layout_height="@dimen/_22sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:background="@color/HomeThemeColor"
                        app:layout_constraintStart_toEndOf="@id/imgPassword"
                        app:layout_constraintTop_toBottomOf="@id/imgResetPassword"
                        android:layout_marginTop="@dimen/_25sdp"/>

                    <EditText
                        android:id="@+id/etPassword"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="@string/new_password"
                        android:inputType="textPassword"
                        android:maxLength="30"
                        android:maxLines="1"
                        android:paddingVertical="@dimen/_5sdp"
                        android:textSize="@dimen/_11sdp"
                        app:layout_constraintStart_toEndOf="@id/viewHorizontal2"
                        app:layout_constraintTop_toTopOf="@id/viewHorizontal2"
                        app:layout_constraintEnd_toStartOf="@id/imgEye"
                        app:layout_constraintBottom_toBottomOf="@id/viewHorizontal2"
                        android:textColor="@color/Heading_Color"
                        android:background="@null"
                        android:layout_marginStart="@dimen/_15sdp"/>

                    <ImageView
                        android:id="@+id/imgEye"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/ic__cross_eye"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/viewHorizontal2"
                        app:layout_constraintBottom_toBottomOf="@id/viewHorizontal2"
                        android:layout_marginEnd="@dimen/_25sdp"/>

                    <View
                        android:id="@+id/viewPassword"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginHorizontal="@dimen/_15sdp"
                        android:background="@color/HomeThemeColor"
                        app:layout_constraintTop_toBottomOf="@id/viewHorizontal2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="@dimen/_5sdp"/>

                    <TextView
                        android:id="@+id/tvPassword"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/error_color"
                        android:textSize="@dimen/_11sdp"
                        android:text=""
                        android:layout_marginHorizontal="@dimen/_15sdp"
                        android:visibility="gone"
                        android:fontFamily="@font/public_sans_regular"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/viewPassword"/>


                    // confirm password

                    <ImageView
                        android:id="@+id/imgConfirmPassword"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/password"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/viewHorizontal3"
                        app:layout_constraintBottom_toBottomOf="@id/viewHorizontal3"
                        android:layout_marginStart="@dimen/_15sdp"/>

                    <View
                        android:id="@+id/viewHorizontal3"
                        android:layout_width="2dp"
                        android:layout_height="@dimen/_22sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:background="@color/HomeThemeColor"
                        app:layout_constraintStart_toEndOf="@id/imgPassword"
                        app:layout_constraintTop_toBottomOf="@id/viewPassword"
                        android:layout_marginTop="@dimen/_25sdp"/>

                    <EditText
                        android:id="@+id/etConfirmPassword"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="@string/confirm_password"
                        android:inputType="textPassword"
                        android:maxLength="30"
                        android:maxLines="1"
                        android:paddingVertical="@dimen/_5sdp"
                        android:textSize="@dimen/_11sdp"
                        app:layout_constraintStart_toEndOf="@id/viewHorizontal3"
                        app:layout_constraintTop_toTopOf="@id/viewHorizontal3"
                        app:layout_constraintEnd_toStartOf="@id/imgConfirmEye"
                        app:layout_constraintBottom_toBottomOf="@id/viewHorizontal3"
                        android:textColor="@color/Heading_Color"
                        android:background="@null"
                        android:layout_marginStart="@dimen/_15sdp"/>

                    <ImageView
                        android:id="@+id/imgConfirmEye"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/ic__cross_eye"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/viewHorizontal3"
                        app:layout_constraintBottom_toBottomOf="@id/viewHorizontal3"
                        android:layout_marginEnd="@dimen/_25sdp"/>

                    <View
                        android:id="@+id/viewConfirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginHorizontal="@dimen/_15sdp"
                        android:background="@color/HomeThemeColor"
                        app:layout_constraintTop_toBottomOf="@id/viewHorizontal3"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="@dimen/_5sdp"/>

                    <TextView
                        android:id="@+id/tvConfirmPassword"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/error_color"
                        android:textSize="@dimen/_11sdp"
                        android:text=""
                        android:layout_marginHorizontal="@dimen/_15sdp"
                        android:visibility="gone"
                        android:fontFamily="@font/public_sans_regular"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/viewConfirmPassword"/>

                    <Button
                        android:id="@+id/btnSend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/login_background"
                        android:text="@string/submit"
                        android:textSize="@dimen/_13sdp"
                        android:textAllCaps="false"
                        android:paddingHorizontal="@dimen/_55sdp"
                        android:paddingVertical="@dimen/_3sdp"
                        android:layout_marginVertical="@dimen/_50sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/viewConfirmPassword"
                        app:layout_constraintBottom_toBottomOf="@id/guideline" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.95"/>



                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.core.widget.NestedScrollView>


        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"
        android:theme="@style/progressBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>